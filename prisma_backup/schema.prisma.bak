generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// Syncs with auth.users
model Profile {
  id              String   @id @db.Uuid
  email           String   @unique
  name            String?
  avatar_url      String?
  bio             String?
  role            String?  @default("MEMBER") // 'GUEST', 'MEMBER', 'AUTHOR', 'REVIEWER', 'ADMIN'
  expertise       String[] @default([])
  following_users String[] @default([]) @db.Uuid
  following_tags  String[] @default([])
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  updated_at      DateTime @default(now()) @db.Timestamptz(6)

  posts    Post[]
  comments Comment[]

  @@map("profiles")
}

model Post {
  id                String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  slug              String    @unique
  title             String
  subtitle          String?
  content           String?
  author_id         String    @db.Uuid
  status            String?   @default("DRAFT") // 'DRAFT', 'UNDER_REVIEW', 'PUBLISHED', 'ARCHIVED'
  type              String?   @default("ARTICLE") // 'ARTICLE', 'PAPER', 'LAB_NOTE'
  tags              Json?     @default("[]")
  read_time_minutes Int?      @default(5)
  featured          Boolean?  @default(false)
  pinned            Boolean?  @default(false)
  likes             String[]  @default([]) @db.Uuid
  published_at      DateTime? @db.Timestamptz(6)
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  updated_at        DateTime  @default(now()) @db.Timestamptz(6)

  author   Profile   @relation(fields: [author_id], references: [id], onDelete: Cascade)
  comments Comment[]

  @@map("posts")
}

model Comment {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  post_id    String   @db.Uuid
  author_id  String   @db.Uuid
  parent_id  String?  @db.Uuid
  content    String
  reactions  Json?    @default("[]")
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)

  post   Post      @relation(fields: [post_id], references: [id], onDelete: Cascade)
  author Profile   @relation(fields: [author_id], references: [id], onDelete: Cascade)
  parent Comment?  @relation("CommentReplies", fields: [parent_id], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")

  @@map("comments")
}